	private static void printPattern(String word) {
		for(int k = 1; k<= word.length(); k++)
		{
			//print k letters from the word
			for(int i = 0; i<k; i++)
			{
				System.out.print(word.charAt(i));
			}
			System.out.println();
		}
	}

